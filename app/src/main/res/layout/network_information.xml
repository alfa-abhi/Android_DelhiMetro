<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView8"
        android:src="@drawable/yl"
        android:onClick="Yellow"
        android:layout_below="@+id/imageView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/imageView7"
        android:src="@drawable/rl"
        android:onClick="Red"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="101dp"
        android:id="@+id/imageView9"
        android:src="@drawable/bl"
        android:onClick="Blue"
        android:layout_below="@+id/imageView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="358dp"
        android:layout_height="86dp"
        android:id="@+id/imageView10"
        android:src="@drawable/vl"
        android:onClick="Violet"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="400dp"
            android:layout_height="102dp"
            android:id="@+id/imageView11"
            android:src="@drawable/gl"
            android:onClick="Green"
            android:layout_below="@+id/imageView10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="357dp"
            android:layout_height="95dp"
            android:id="@+id/imageView12"
            android:src="@drawable/lbl"
            android:onClick="LightBlue"
            android:layout_below="@+id/imageView11"
            android:layout_alignRight="@+id/imageView10"
            android:layout_alignEnd="@+id/imageView10" />

        <ImageView
            android:layout_width="357dp"
            android:layout_height="86dp"
            android:id="@+id/imageView13"
            android:src="@drawable/ol"
            android:onClick="Orange"
            android:layout_below="@+id/imageView12"
            android:layout_alignLeft="@+id/imageView12"
            android:layout_alignStart="@+id/imageView12" />


    </RelativeLayout>
</ScrollView>